---
import Image from "../components/Image.astro";
interface Props {
  title: string;
  src: string;
  alt: string;
  reverse?: boolean;
}

const { title, src, alt, reverse = false } = Astro.props;
---

<article class="grid grid-cols-1 lg:grid-cols-2 place-items-center gap-6">
  <div class:list={["prose lg:prose-xl", { "lg:order-2": reverse }]}>
    <header>
      <h3>{title}</h3>
    </header>
    <slot />
  </div>
  <Image alt={alt} src={src} />
</article>
