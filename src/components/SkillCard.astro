---
interface Props {
  title: string;
  text: string;
  skills: string;
}

const { title, text, skills } = Astro.props;
---

<article class="prose lg:prose-xl shadow-lg p-4 rounded flex flex-col">
  <header>
    <h3 class="text-primary-400">{title}</h3>
  </header>
  <p>{text}</p>
  <hr class="mt-auto" />
  <p>
    {skills}
  </p>
</article>

<style>
  h3,
  hr {
    margin: 0 0 1.5rem !important;
  }
</style>
