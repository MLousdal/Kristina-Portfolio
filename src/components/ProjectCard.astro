---
import Image from "../components/Image.astro";
import { localizePath } from "astro-i18next";

interface Props {
  pretitle: string;
  title: string;
  text: string;
  src: string;
  color: string;
  link: string;
}

const { pretitle, title, text, src, color, link } = Astro.props;
---

<article class="w-full group relative">
  <Image src={src} alt={pretitle + " mockup"} />
  <div
    class="lg:opacity-0 group-hover:opacity-100 group-focus:opacity-100 inset-0 absolute transition bg-secondary-200/80"
  >
    <div
      class="p-6 lg:p-12 absolute bottom-0 left-0 text-black w-full lg:w-2/3"
    >
      <h2
        class="text-black text-2xl md:text-4xl lg:text-5xl xl:text-6xl font-serif mb-4"
      >
        <small class="text-lg md:text-xl lg:text-2xl xl:text-63xl"
          >{pretitle}</small
        ><br />{title}
      </h2>
      <p class="text-lg hidden lg:block">{text}</p>
    </div>
    <a href={localizePath(link)} class="absolute inset-0" title={pretitle}></a>
  </div>
</article>
